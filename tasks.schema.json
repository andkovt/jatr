{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "jatr.schema.json",
  "title": "Jatr Task Runner Configuration File",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "tasks"
  ],
  "properties": {
    "vars": { "type": "array", "items": { "$ref": "#/definitions/variable" } },
    "tasks": { "type": "object", "additionalProperties": {"type": "object", "$ref": "#/definitions/task" } }
  },
  "definitions": {
    "variable": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "anyOf": [
        {
          "properties": {
            "val": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          }
        },
        {
          "properties": {
            "cmd": {
              "type": "string"
            },
            "shell": {
              "type": "string"
            }
          }
        }
      ]
    },
    "task": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "actions"
      ],
      "properties": {
        "actions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/action"
          }
        },
        "desc": {
          "type": "string"
        },
        "vars": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/variable"
          }
        }
      }
    },
    "action": {
      "additionalProperties": false,
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "properties": {
            "task": {
              "type": "string"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "anyOf": [
            {
              "properties": {
                "cmd": {
                  "type": "string"
                }
              }
            },
            {
              "properties": {
                "cmd": {
                  "type": "object",
                  "$ref": "#/definitions/actionCommand"
                }
              }
            }
          ]
        },
        {
          "type": "object",
          "additionalProperties": false,
          "anyOf": [
            {
              "properties": {
                "if": {
                  "type": "string"
                }
              }
            },
            {
              "properties": {
                "if": {
                  "type": "object",
                  "$ref": "#/definitions/actionCommand"
                }
              }
            }
          ]
        }
      ]
    },
    "actionCommand": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "cmd": {
          "type": "string"
        },
        "shell": {
          "type": "string"
        }
      }
    }
  }
}